<div class="pagetitle">
	<h2>Transactions</h2>
</div>

<div class="pageinner">

	<div id="invoices_list">
	
<div class="pagination">

	<%= will_paginate @transactions %>

</div>
<table width="100%" cellpadding="0" cellspacing="0" class="datatable">
	<thead>
		<tr>
			<td width="1%">Reference</td>			
			<td>Type</td>
			<td>Date Raised</td>
			<td>Message</td>
			<td>Total</td>
			<td width="1%">Paid?</td>
		</tr>
	</thead>

	<tbody>
	<% @transactions.each do |txn| %>
		
		<tr id="invoice_<%=h txn.id %>" class="invoice_inv">
			<td class="ref"><b><%=h txn.id %></b></td>
			
			<td><%=h txn.action.capitalize %></td>
			<td><%=h txn.created_at.to_date %></td>
			
			<td><%=h txn.message %></td>
			<td><%=h number_to_currency(txn.amount) %></td>

			<td class="last" style="text-align:center;">
				<span id="invoice_127_pay">
					<% if txn.success?
						image_tag("paid.png" , :alt => "Paid" , :size => "16x16" )
					end %>
					<img alt="Tick" src="/images/tick.png" />
				
				</span>
			</td>
		</tr>
	<% end %>
		
		
	</tbody>
	<tfoot>
		<tr>

			<td colspan="8"></td>
		</tr>
	</tfoot>
</table>
