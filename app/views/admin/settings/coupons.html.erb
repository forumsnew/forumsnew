</head>

<body>
	<div class="container">
		<div id="header" >

			
			<h1 class="logo"><a href="/">ForumsNew </a></h1>
			
			<ul class="main-nav">
				<li class=""><a href="/admin" class="dashboard">Dashboard</a></li>				
				<li class=""><a href="/admin/clients" class="clients">Clients</a></li>
				<li class=""><a href="/admin/orders" class="quotes">Orders</a></li>
				<li class=""><a href="/admin/transactions" class="invoices">Transactions</a></li>
			</ul>

			<p>
				<a href="/profile">My Profile</a> | 
				<a href="/admin/settings">Settings</a> | 
				<a href="/logout" onclick="return confirm('Are you sure you wish to logout?');">Logout</a>
			</p>
			<div class="subnav">
				<ul class="">
					<li class="start"><a href="/clients">Client List</a></li>
					<li><a href="/clients/new">Add New Client</a></li>
				</ul>
				<ul  class="">
					<li class="start"><a href="/jobs">Jobs List</a></li>

					<li><a href="/jobs/new">Add New Job</a></li>
				</ul>
				<ul class="">
					<li class="start"><a href="/quotes">Quotes List</a></li>
					<li><a href="/quotes/new">Add New Quote</a></li>
				</ul>
				<ul class="">

					<li class="start"><a href="/orders">Orders List</a></li>
					<li><a href="/orders/new">Add New Order</a></li>
				</ul>
			</div>
			<div class="clearme"></div>
		</div>

	
		<div id="content" class=" ">
			
<div class="sublinks" id="sublinks">
	<ul>
		<li><a href="/admin/settings">General Settings</a></li>
		<li><a href="/admin/settings/coupons" class="active">Coupons</a></li>
		<li><a href="/admin/settings/products">Products</a></li></ul></div>

			<div class="wrap">
				<div class="top-right">

					<div class="inside">
						
	<div class="pagetitle">
		<h2>Coupons</h2>
	
	</div>

	<div class="pageinner">
		<p class="alignright"><img alt="Add" src="/images/icons/add.gif?1236292113" /> <a href="/admin/settings/coupons/new">Create New Coupon</a></p>
		
		<table width="100%" cellpadding="0" cellspacing="0" class="datatable" style="margin-top:5px;">
			<thead>
				<tr>
					<td width="1%">Reference</td>
					<td>Code</td>
					<td>Discount Amount</td>
					<td>Redeemed</td>

					
					<td>Product</td>
				</tr>
			</thead>
			<tbody>
				
				
			<% @coupons.each do |coupon| %>				
				<tr>
					<td class="ref"><strong><%=h coupon.id %></strong></td>
					<td><%=h coupon.code %></td>
					
					<td>
						<% if coupon.discount_type == 'percent' %>
							<%= number_to_percentage(coupon.amount, :precision => 0)%>
						<% else %>
							<%= number_to_currency(coupon.amount) %>
						<% end%>
					</td>
					<td>0</td>
					<td class="last">
						
						<% if coupon.product_id == 0 %>
						All
						<% else %>
							<%=h coupon.product.title %>
						<% end %></td>
					
				</tr>
				
			
			<% end %>	
				
			</tbody>
			<tfoot>
				<tr>
					<td colspan="6"></td>
				</tr>
			</tfoot>
		</table>
	</div>

					</div>
				</div>
			</div>
			<div class="bottom"><div class="bottom-left"><div class="bottom-right"></div></div></div>
			
		</div>
	
	
		<div id="right">
			
		</div>
	</div>
</body>

