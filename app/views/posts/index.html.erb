<h1>Listing posts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Order</th>
    <th>Forum username</th>
    <th>Type</th>
    <th>Date</th>
    <th>Flag</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.user_id %></td>
    <td><%=h post.order_id %></td>
    <td><%=h post.forum_username %></td>
    <td><%=h post.type %></td>
    <td><%=h post.date %></td>
    <td><%=h post.flag %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>